@inherits LayoutComponentBase

@code {
    private bool menuAberto = false;
    private void ToggleMenu() => menuAberto = !menuAberto;
    private void FecharMenu() => menuAberto = false;
    private void OnOverlayClick() { if (menuAberto) FecharMenu(); }
}

<div class="main-layout">
    <header class="header">
        <nav class="navbar">
            <div class="navbar-left">
                <a href="/">
                    <img src="LogoOntech.webp" alt="Logo da Ontech Solution - Soluções em tecnologia, sites, sistemas e automação" class="logo" loading="lazy" width="120" height="48" />
                </a>
            </div>
            <div class="navbar-right">
                <ul class="nav-menu desktop-menu">
                    <li><a href="/">Home</a></li>
                    <li><a href="/sobre">Sobre</a></li>
                    <li><a href="/servicos">Serviços</a></li>
                    <li><a href="/portfolio">Portfólio</a></li>
                    <li><a href="/blog">Blog</a></li>
                    <li><a href="/contato">Contato</a></li>
                </ul>
                <button class="menu-hamburguer" @onclick="ToggleMenu" aria-label="Abrir menu de navegação" aria-expanded="@menuAberto" aria-controls="nav-menu">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </button>
            </div>
            @if (menuAberto)
            {
                <div class="menu-overlay" @onclick="OnOverlayClick"></div>
                <ul class="nav-menu mobile-menu @(menuAberto ? "aberto" : "")" id="nav-menu" tabindex="0">
                    <li><a href="/" @onclick="FecharMenu">Home</a></li>
                    <li><a href="/sobre" @onclick="FecharMenu">Sobre</a></li>
                    <li><a href="/servicos" @onclick="FecharMenu">Serviços</a></li>
                    <li><a href="/portfolio" @onclick="FecharMenu">Portfólio</a></li>
                    <li><a href="/blog" @onclick="FecharMenu">Blog</a></li>
                    <li><a href="/contato" @onclick="FecharMenu">Contato</a></li>
                </ul>
            }
        </nav>
    </header>
    <main class="content">
        @Body
    </main>
    <footer class="footer">
        <span>© @DateTime.Now.Year Ontech Solution. Todos os direitos reservados.</span>
    </footer>
</div>
